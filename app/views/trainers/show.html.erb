<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% if @trainer.id == current_trainer.id %>
	<%= button_to "Create new pokemon", pokemons_path, :class => "button medium", :method => :get%>
<% end %>
<p>Pokemon: </p>
<% if @list %>
	<%@list.each do |pokemon| %>
		<p><%= pokemon.name %></p>
		<p><%= pokemon.level %></p>
		<p><%= pokemon.health %></p>
		<% if pokemon.ndex %>
    		<%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") %>
    	<% end %>
    	<%= button_to "Damage!", damage_path(id:pokemon, trainer:@trainer.id), :class => "button medium", :method => :patch%>
    <% end %>
<% end %>
